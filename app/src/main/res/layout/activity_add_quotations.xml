<?xml version="1.0" encoding="utf-8"?>

<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.cursometertestapp.AddQuotationsActivity"
    android:id = "@+id/add_quot_coordinator_layout" >

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id = "@+id/add_quot_appbar"
        android:background="?attr/colorPrimary">

        <android.support.v7.widget.Toolbar
            android:id="@+id/add_quot_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#212121"
            app:layout_scrollFlags="scroll|enterAlways|snap" >

        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:id = "@+id/add_quot_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#212121"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" >

        <android.support.v7.widget.RecyclerView
            android:id="@+id/add_quot_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" />
    </android.support.v4.widget.NestedScrollView>
</android.support.design.widget.CoordinatorLayout>