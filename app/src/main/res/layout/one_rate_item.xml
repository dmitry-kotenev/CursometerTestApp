<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/cardview_dark_background"
    android:orientation="horizontal"
    android:paddingBottom="16dp"
    android:paddingTop="18dp">

    <TextView
        android:id="@+id/minimum_amount_text_view"
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="0.8"
        android:fontFamily="sans-serif"
        android:letterSpacing="0.01"
        android:paddingLeft="11dp"
        android:textColor="#999999"
        android:textSize="14sp"
        android:textStyle="normal"
        android:text="From 1"
        tools:text="From 1" />

    <RelativeLayout
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/purchase_price_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/purchase_price_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:textColor="#ffffff"
                android:textSize="24sp"
                android:textStyle="normal"
                android:text="58,90"
                tools:text="58,90" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="3dp"
                android:src="@drawable/icn_notification_green" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/purchase_price_layout"
            android:fontFamily="sans-serif"
            android:letterSpacing="0.01"
            android:textColor="#999999"
            android:textSize="14sp"
            android:textStyle="normal"
            android:text="Purchase"
            tools:text="Purchase" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/sale_price_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/sale_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:textColor="#ffffff"
                android:textSize="24sp"
                android:textStyle="normal"
                tools:text="59,90"
                android:text="59,90"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="3dp"
                android:src="@drawable/icn_notification_red" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/sale_price_layout"
            android:fontFamily="sans-serif"
            android:letterSpacing="0.01"
            android:textColor="#999999"
            android:textSize="14sp"
            android:textStyle="normal"
            tools:text="Sale"
            android:text="Sale"/>

    </RelativeLayout>

</LinearLayout>